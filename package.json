{
  "name": "svelte-tiptap",
  "description": "Svelte components for tiptap v2",
  "version": "1.1.3",
  "author": "sibiraj-s",
  "license": "MIT",
  "repository": "https://github.com/sibiraj-s/svelte-tiptap.git",
  "bugs": "https://github.com/sibiraj-s/svelte-tiptap/issues",
  "homepage": "https://github.com/sibiraj-s/svelte-tiptap#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/sibiraj-s"
    }
  ],
  "keywords": [
    "svelte",
    "tiptap",
    "svelte-tiptap",
    "tiptap-v2",
    "prosemirror",
    "rich-text-editor"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite dev --port 3009",
    "build:demo": "vite build",
    "build": "npm run build:demo && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "is-ci || npm run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "e2e": "cypress open --e2e",
    "lint": "eslint . --ext .js,.ts,.svelte --ignore-path .gitignore",
    "prepare": "is-ci || husky",
    "publish:npm": "npm publish"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.0.3",
    "@tiptap/extension-bubble-menu": "^2.0.3",
    "@tiptap/extension-floating-menu": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.7.3",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/svelte": "^5.2.4",
    "@tiptap/core": "^2.3.2",
    "@tiptap/extension-bubble-menu": "^2.3.2",
    "@tiptap/extension-floating-menu": "^2.3.2",
    "@tiptap/pm": "^2.3.2",
    "@tiptap/starter-kit": "^2.3.2",
    "@types/node": "^20.12.11",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "commitlint-config-non-conventional": "^1.0.1",
    "cypress": "^13.9.0",
    "eslint": "^8.57.0",
    "eslint-config-pegasus": "^5.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^3.2.0",
    "eslint-plugin-svelte": "^2.46.0",
    "happy-dom": "^14.10.1",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.3",
    "publint": "^0.2.7",
    "sass": "^1.77.1",
    "svelte": "^5.1.4",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "typescript-transform-extensions": "^1.0.1",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  }
}
