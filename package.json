{
  "name": "svelte-tiptap",
  "description": "Svelte components for tiptap v2",
  "version": "0.7.1",
  "author": "sibiraj-s",
  "license": "MIT",
  "repository": "https://github.com/sibiraj-s/svelte-tiptap.git",
  "bugs": "https://github.com/sibiraj-s/svelte-tiptap/issues",
  "homepage": "https://github.com/sibiraj-s/svelte-tiptap#readme",
  "keywords": [
    "svelte",
    "tiptap",
    "svelte-tiptap",
    "tiptap-v2",
    "prosemirror",
    "rich-text-editor"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite dev --port 3009",
    "build:demo": "vite build",
    "build": "npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "is-ci || npm run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "e2e": "cypress open --e2e",
    "lint": "eslint . --ext .js,.ts,.svelte --ignore-path .gitignore",
    "prepare": "is-ci || husky install",
    "publish:npm": "npm publish"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.0.3",
    "@tiptap/extension-bubble-menu": "^2.0.3",
    "@tiptap/extension-floating-menu": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "svelte": "^4.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.21.0",
    "@sveltejs/package": "^2.1.0",
    "@testing-library/svelte": "^4.0.2",
    "@tiptap/core": "^2.0.3",
    "@tiptap/extension-bubble-menu": "^2.0.3",
    "@tiptap/extension-floating-menu": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "@tiptap/starter-kit": "^2.0.3",
    "@types/node": "^18.16.19",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "autoprefixer": "^10.4.14",
    "classnames": "^2.3.2",
    "commitlint-config-non-conventional": "^1.0.1",
    "cypress": "^12.16.0",
    "eslint": "^8.44.0",
    "eslint-config-pegasus": "^3.5.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-svelte": "^2.32.2",
    "happy-dom": "^9.20.3",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "publint": "^0.1.13",
    "sass": "^1.63.6",
    "svelte": "^4.0.1",
    "svelte-check": "^3.4.4",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "typescript-transform-extensions": "^1.0.1",
    "vite": "^4.3.9",
    "vitest": "^0.32.2"
  }
}
