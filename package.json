{
  "name": "svelte-tiptap",
  "description": "Svelte components for tiptap v2",
  "version": "2.1.0",
  "author": "sibiraj-s",
  "license": "MIT",
  "repository": "github:sibiraj-s/svelte-tiptap",
  "bugs": "https://github.com/sibiraj-s/svelte-tiptap/issues",
  "homepage": "https://github.com/sibiraj-s/svelte-tiptap#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/sibiraj-s"
    }
  ],
  "keywords": [
    "svelte",
    "tiptap",
    "svelte-tiptap",
    "tiptap-v2",
    "prosemirror",
    "rich-text-editor"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite dev --port 3009",
    "build:demo": "vite build",
    "build": "npm run build:demo && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "is-ci || npm run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "e2e": "cypress open --e2e",
    "lint": "eslint .",
    "prepare": "is-ci || husky",
    "publish:npm": "npm publish"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.11.5",
    "@tiptap/extension-bubble-menu": "^2.11.5",
    "@tiptap/extension-floating-menu": "^2.11.5",
    "@tiptap/pm": "^2.11.5",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.22.2",
    "@sveltejs/package": "^2.3.12",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/svelte": "^5.2.8",
    "@tiptap/core": "^2.24.2",
    "@tiptap/extension-bubble-menu": "^2.24.2",
    "@tiptap/extension-floating-menu": "^2.24.2",
    "@tiptap/extension-placeholder": "^2.24.2",
    "@tiptap/pm": "^2.24.2",
    "@tiptap/starter-kit": "^2.24.2",
    "@types/node": "^22.16.0",
    "clsx": "^2.1.1",
    "commitlint-config-non-conventional": "^1.0.1",
    "cypress": "^14.5.1",
    "eslint": "^9.30.1",
    "eslint-config-pegasus": "^6.0.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-cypress": "^5.1.0",
    "eslint-plugin-svelte": "^3.10.1",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "publint": "^0.3.12",
    "sass": "^1.89.2",
    "svelte": "^5.35.2",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-transform-extensions": "^1.0.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
